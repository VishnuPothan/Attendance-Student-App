<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:windowFullscreen="true"
    tools:context=".MessageSentActivity">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/sent_attendance_request"
        android:textAlignment="center"
        android:fontFamily="@font/bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/subjectLayout"
        android:background="@color/ivory"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView16"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_name"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     :     "
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/subjectNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teacherLayout"
        android:background="@color/ivory"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/subjectLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teacher_name"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     :     "
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/teacherNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:background="@color/ivory"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/teacherLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     :     "
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:background="@color/ivory"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/dateLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     :     "
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attendanceLayout"
        android:background="@color/ivory"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/timeLayout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_mark"
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     :     "
            android:textAlignment="center"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/attendanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/messageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendanceLayout"
        android:layout_marginTop="20dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        android:hint="@string/enter_the_message"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/messageTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submitBtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="150sp"
        android:layout_height="50sp"
        app:backgroundTint="@color/secondary"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/bold"
        android:text="@string/submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

</RelativeLayout>